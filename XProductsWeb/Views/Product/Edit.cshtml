@model XProductsWeb.Models.ProductEditViewModel

@{
    ViewBag.Title = "Edit a product";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { role = "form" }))
        {
            @Html.HiddenFor(model => Model.Product.Id)

            <div class="form-group">
                <label for="name">Name :</label>
                @Html.TextBoxFor(m => m.Product.Name, new { @name = "name", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Product.Name)
            </div>

            <div class="form-group">
                <label for="price">Product code</label>
                @Html.TextBoxFor(m => m.Product.Code, new { @name = "code", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Product.Code)
            </div>

            <div class="form-group">
                <label for="description">Description :</label>
                @Html.TextAreaFor(m => m.Product.Description, new { @name = "description", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Product.Description)
            </div>

            <div class="form-group">
                <label for="price">Price :</label>
                @Html.TextBoxFor(m => m.Product.Price, new { @name = "price", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Product.Price)
            </div>

            <div class="form-group">
                <label for="stock">Stock :</label>
                @Html.TextBoxFor(m => m.Product.Stock, new { @name = "stock", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Product.Stock)
            </div>

            <div class="form-group">
                <label for="active">Active :</label>
                @Html.CheckBoxFor(m => m.Product.Active, new { @name = "active", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Product.Active)
            </div>

            <div class="form-group">
                <label for="categoryId">Category :</label>
                @Html.DropDownListFor(m => m.Product.CategoryId, Model.CategoryItems, new { @name = "categoryId", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Product.Category)
            </div>

            <span class="clearfix">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                <button type="submit" class="btn btn-primary pull-right">Save</button>
            </span>
        }
    </div>
</div>
