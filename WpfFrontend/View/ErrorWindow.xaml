<Window x:Class="WpfFrontend.View.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFrontend.View"
        mc:Ignorable="d"
        Title="Error" Height="150" Width="500">
    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="{Binding ErrorMessage}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </WrapPanel>
</Window>
